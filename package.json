{
    "name": "react-webpack-boilerplate",
    "author": "Rich Sturim",
    "license": "MIT",
    "version": "1.0.0",
    "description": "React Webpack Boilerplate",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/rsturim/react-webpack-boilerplate"
    },
    "scripts": {
        "start": "webpack-dev-server --hot --inline --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js  --progress --profile --colors",
        "test": "jest",
        "test-watch": "jest --watch",
        "eslint": "eslint --ext .jsx,.js src/;exit 0",
        "eslint-fix": "eslint --fix --ext .jsx,.js src/;exit 0",
        "pretty": "prettier --write 'src/**/*.js'",
        "precommit": "lint-staged && npm test"
    },
    "lint-staged": {
        "*.js": [
            "npm run pretty",
            "git add"
        ]
    },
    "dependencies": {
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "react-router-dom": "^4.3.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.0",
        "@babel/core": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-react": "^7.0.0",
        "autoprefixer": "^9.1.5",
        "babel-core": "^7.0.0-bridge.0",
        "babel-loader": "^8.0.2",
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^1.0.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^5.6.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-compat": "^2.5.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^2.0.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.3",
        "jest": "^22.4.3",
        "lint-staged": "^7.3.0",
        "mini-css-extract-plugin": "^0.4.3",
        "node-sass": "^4.9.3",
        "postcss-loader": "^3.0.0",
        "prerender-loader": "^1.1.0",
        "prettier": "1.14.3",
        "react-test-renderer": "^16.3.2",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.0",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.1",
        "webpack-dev-server": "^3.1.9",
        "webpack-merge": "^4.1.2",
        "webpack-notifier": "^1.6.0"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "./src/polyfills/enzyme.setup.js",
        "testURL": "http://localhost"
    },
    "browserslist": {
        "development": [
            "last 2 chrome versions",
            "last 2 firefox versions",
            "last 2 edge versions"
        ],
        "production": [
            ">1%",
            "last 4 versions",
            "Firefox ESR",
            "not ie < 11"
        ]
    }
}
